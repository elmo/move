<%= render "shared/components/dropdown/dropdown",
           menu_position: "left-auto right-8 -top-4" do %>

  <%= render "shared/components/dropdown/dropdown_link",
             link_text: t('scaffold.view', resource: Customer, default: 'View %{resource}'),
             link_path: customer_path(customer),
             icon_name: "arrow-right" %>


  <%= render "shared/components/dropdown/dropdown_link",
               link_text: t('scaffold.edit', resource: Customer, default: 'Edit %{resource}'),
               link_path: edit_customer_path(customer),
               icon_name: "square-pen" %>


  <%= render "shared/components/dropdown/dropdown_link",
               link_text: t('scaffold.delete', resource: Customer, default: 'Delete %{resource}'),
               icon_name: "trash",
               link_path: customer_path(customer),
               link_method: :delete,
               button_link: true,
               data: {
                   turbo_method: :delete,
                   turbo_confirm: t('scaffold.really_delete', resource: customer, default: 'Really delete %{resource}?')
               } %>

<% end %>
