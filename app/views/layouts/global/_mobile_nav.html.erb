<div class="hidden fixed top-0 left-0 w-full h-full z-50 bg-gray-50 dark:bg-gray-950"
     data-mobile-nav-target="mobileNav">

  <div class="absolute top-6 right-6 z-50"
      data-action="click->mobile-nav#toggle">
    <%= icon("x", color: "text-gray-400 dark:text-white", classes: "text-lg md:text-xl") %>
  </div>

  <div class="space-y-8 relative py-4 px-4">

    <div>
      <%= render "shared/components/logo",
                  
                  
                  
                  link_path: root_path,
                  link_classes: "" %>
    </div>

    <div class="px-2 space-y-12">

      <%= render "layouts/global/nav",
                  container_classes: "space-y-1 h-screen overflow-y-auto",
                  link_classes: "group/nav-link",
                  link_padding: "py-2",
                  inactive_icon_container_classes: "text-gray-600 dark:text-gray-200",
                  active_icon_container_classes: "text-gray-800 dark:text-gray-100",
                  inactive_label_classes: "text-primary dark:text-primary",
                  active_label_classes: "text-black dark:text-white" %>

      <%= render "layouts/global/mobile_nav_user_links" %>

    </div>

  </div>

</div>
