<div class="fixed w-full z-30 bg-white dark:bg-black border-b border-gray-200 dark:border-gray-700
            lg:pl-0">
  <div class="flex justify-between w-full">
    <div class="w-full py-3 px-6
                lg:flex lg:items-center lg:justify-between lg:space-x-4 lg:pr-4 lg:w-3/4
                xl:w-4/5
                2xl:w-5/6">
      <div class="flex-1 flex items-center justify-between min-h-10 space-x-4 sm:space-x-6">
        <div class="flex items-center space-x-6">
          <div>
            <%= yield :breadcrumbs if content_for?(:breadcrumbs) %>
          </div>
        </div>
        <div class="flex items-center space-x-4 sm:space-x-6">
          <div class="hidden lg:block">
            <%= render "layouts/global/user_menu" %>
          </div>

          <div class="cursor-pointer text-gray-600 dark:text-white
                      lg:hidden"
               data-action="click->mobile-nav#toggle">
            <%= icon("menu", size: "text-lg") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
