<%= render "shared/components/listings/listing",
           listing_link: payment_path(account_slug: current_account.slug, id: payment.id),
           title: "#{currency_symbol(payment.currency) if payment.currency.present? }#{display_amount(payment.amount, hide_zero_cents: true)}",
           description: payment.created_at.strftime(t('commerce.payments.listing.date_format', default: '%B %-d, %Y')) do %>
  <%= render "shared/components/label",
              text: t("commerce.payments.listing.status.#{payment.status}", default: payment.status.humanize) %>
<% end %>
