<%= render "shared/components/dropdown/dropdown",
           menu_position: "left-auto right-8 -top-4" do %>

  <%= render "shared/components/dropdown/dropdown_link",
             link_text: t('admin.purchases.settings.view_purchase', default: 'View Purchase'),
             link_path: admin_purchase_path(purchase),
             icon_name: "eye" %>

  <%= render "shared/components/dropdown/dropdown_link",
             link_text: t('admin.purchases.settings.delete_purchase', default: 'Delete Purchase'),
             link_path: admin_destroy_purchase_path(purchase),
             icon_name: "trash",
             link_method: :delete,
             button_link: true,
             data: {
               turbo_method: :delete,
               turbo_confirm: t('admin.purchases.settings.confirm_delete', default: 'Really delete this purchase? This action cannot be undone.')
             } %>

<% end %>
