<%= content_for(:title) do %>
  My Bids
<% end %>

<%= content_for(:breadcrumbs) do %>
  <%= render "shared/components/breadcrumbs/breadcrumbs" do %>
    <%= render "shared/components/breadcrumbs/breadcrumb_link", text: "Bids" %>
  <% end %>
<% end %>
<div class="space-y-12">
  <% if @bids.any? %>
    <%= render "shared/components/page_header", title: "Bids", button_link_path: root_path %>
    <% end %>
    <div class="space-y-6">
      <%= render "shared/components/listings/listings" do %>
        <% @bids.each do |bid| %>
          <%= render "provider/bids/bid_listing", bid: bid %>
        <% end %>
      <% end %>
      <% if @pagy.pages > 1 %>
        <div class="pagy-container">
          <%== pagy_nav(@pagy) %>
        </div>
      <% end %>
    </div>
</div>
