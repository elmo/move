<%= render "shared/components/dropdown/dropdown",
           menu_position: "left-auto right-8 -top-4" do %>

   <%= render "shared/components/dropdown/dropdown_link",
    link_text: "View request",
    link_path: rfp_path(rfp),
    icon_name: "arrow-right" %>

<% if current_user.customer? && current_user == rfp.user %>
  <%= render "shared/components/dropdown/dropdown_link", link_text: "Edit request", link_path: edit_rfp_path(rfp), icon_name: "square-pen" %>

  <%= render "shared/components/dropdown/dropdown_link",
    link_text: "Delete request",
    icon_name: "trash",
    link_path: rfp_path(rfp),
    link_method: :delete,
    button_link: true,
    data: {
     turbo_method: :delete,
     turbo_confirm:
      t(
        "scaffold.really_delete",
        resource: rfp,
        default: "Are you sure that you would like to delete this work request?",
      ),
  } %>
 <% end %>

<% end %>
